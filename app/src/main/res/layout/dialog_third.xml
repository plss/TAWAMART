<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/alert_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:id="@+id/btnSelectCookZoneDialogReceive"
        style="@style/button_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:drawableEnd="@drawable/ic_arrow_drop_down"
        android:text="เลือกครัว"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnSelectVendorDialogReceive"
        style="@style/button_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:drawableEnd="@drawable/ic_arrow_drop_down"
        android:text="เลือกผู้ขาย"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnDatePickerDialogReceive"
        style="@style/dialog_gray_button"
        android:layout_width="match_parent"
        android:layout_marginBottom="26dp"
        android:padding="8dp"
        android:text="เลือกวันที่สั่ง"
        android:textAlignment="center"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelDialogReceive"
            style="@style/dialog_red_button"
            android:layout_width="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/btnOkDialogReceive"
            style="@style/dialog_blue_button"
            android:layout_width="wrap_content"
            android:layout_marginStart="8dp"
            android:text="OK" />
    </LinearLayout>

</LinearLayout>